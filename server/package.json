{
  "name": "back",
  "version": "0.0.0",
  "private": true,
  "engines": {
    "node": "10.19.0"
  },
  "scripts": {
    "start": "node ./bin/www",
    "kill": "kill $(lsof -t -i:3500)",
    "mocha": "cross-env NODE_ENV=development mocha --require babel-register test/*.js --exit",
    "test": "npm run kill & npm run mocha",
    "dev": "cross-env NODE_ENV=development nodemon --exec babel-node --presets babel-preset-env ./bin/www"
  },
  "dependencies": {
    "@hapi/joi": "^17.1.1",
    "bcrypt": "^5.0.0",
    "cookie-parser": "~1.4.4",
    "cors": "^2.8.5",
    "debug": "~2.6.9",
    "dotenv": "^8.2.0",
    "express": "~4.16.1",
    "http-errors": "~1.6.3",
    "jade": "~1.11.0",
    "joi-objectid": "^3.0.1",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.10.7",
    "morgan": "~1.9.1",
    "multer": "^1.4.2"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "cross-env": "^7.0.3",
    "mocha": "^8.2.1",
    "nodemon": "^2.0.7"
  },
  "nodemonConfig": {
    "ignore": [
      "test/*",
      "docs/*"
    ],
    "delay": "2500",
    "events": {
      "crash": "sh -c 'lsof -i :${PORT:-3500} -t | xargs kill'"
    }
  }
}
